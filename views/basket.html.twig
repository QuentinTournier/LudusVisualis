<div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h2>{{'Your Basket'|trans}}<br></h2>
                <div class="well">
                    <div class="form-group">
                        <table class="table table-striped">
                            <thead>
                                <th>{{ 'Game'|trans }}</th> 
                                <th>{{ 'Price(â‚¬)'|trans }}</th>
                                <th>{{ 'Action'|trans }}</th>
