{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {% if pathImage is defined %}
                <img id="consoleImage" src="{{ pathImage }}" width="400" alt="Mon Image">
                <font id="consoleName">{{ consoleShortName }}</font>
            {% endif %}
            <li id="consoleDropdown" class="dropdown">
                <button class="btn btn-default dropdown-toggle" href="#" data-toggle="dropdown">
                {{ 'Filter by console'|trans }} <span class="glyphicon glyphicon-chevron-down"></span></button>
                <ul class="dropdown-menu">
                    {% for console in consoles %}
                        <li><a href="{{ url('console',{'consoleId' : console.id}) }}">{{ console.name }}</a></li>
                    {% endfor %}
                </ul>
            </li>
        </div>
        {% for game in games %}
        <div class="col-md-12">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-6">
                        <h2><a class="gameName" href="{{ path('game', { 'id': game.id }) }}">{{ game.name }}</a></h2>
                        <p>{{ game.DescriptionShort }}</p>
                    </div>
                    <div class="col-md-6">
                        <img class="img-circle" src="{{ imagePath ~'/' ~ game.image }}" width="400" alt="Mon Image">
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
        



